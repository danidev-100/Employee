model WorkHours {
  id Int @id @default(autoincrement())
  workDate DateTime 
  workIn DateTime
  workOut DateTime
  hourCount Float @default(0)
  employeeId Int 
  employee Employee @relation(fields: [employeeId], references: [id])
}

model Employee {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  password String
  lastName String 
  userName String 
  role Role @default(USER)
  workHours WorkHours[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime   @updatedAt
}


enum Role {
  USER
  ADMIN
}

